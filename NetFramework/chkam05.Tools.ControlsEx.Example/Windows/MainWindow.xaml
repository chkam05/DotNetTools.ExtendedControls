<Window
    x:Class="chkam05.Tools.ControlsEx.Example.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:chkam05.Tools.ControlsEx.Example.Windows"
    xmlns:cex="clr-namespace:chkam05.Tools.ControlsEx;assembly=chkam05.Tools.ControlsEx"
    xmlns:data="clr-namespace:chkam05.Tools.ControlsEx.Example.Data"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="800"
    Title="ControlsEx"
    Height="450"
    Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/chkam05.Tools.ControlsEx;component/Themes/GridViewEx.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/chkam05.Tools.ControlsEx;component/Themes/GridViewItemEx.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>

        <cex:ScrollViewerEx
            HorizontalScrollBarVisibility="Visible"
            VerticalScrollBarVisibility="Visible">

            <StackPanel
                HorizontalAlignment="Left"
                Margin="8"
                VerticalAlignment="Top">

                <TextBlock
                    Text="Buttons:"/>

                <StackPanel
                    Orientation="Horizontal">

                    <cex:ButtonEx
                        Content="Hello World"
                        IsEnabled="False"/>

                    <cex:ButtonEx
                        Content="Hello World"
                        IsEnabled="True"/>

                </StackPanel>

                <TextBlock
                    Text="Buttons with Icons:"/>

                <StackPanel
                    Orientation="Horizontal">

                    <cex:ButtonExWithIcon
                        Content="Hello World"
                        IsEnabled="False"/>

                    <cex:ButtonExWithIcon
                        Content="Hello World"
                        IsEnabled="True"/>

                </StackPanel>

                <TextBlock
                    Text="CheckBoxes:"/>

                <StackPanel
                    Orientation="Horizontal">

                    <cex:CheckBoxEx
                        CheckMarkTypeIcon="Filled"
                        Content="Hello World"
                        IsEnabled="False"/>

                    <cex:CheckBoxEx
                        CheckMarkTypeIcon="Filled"
                        Content="Hello World"/>

                </StackPanel>

                <TextBlock
                    Text="ToggleButtons:"/>

                <StackPanel
                    Orientation="Horizontal">

                    <cex:ToggleButtonEx
                        Content="Hello World"
                        IsEnabled="False"/>

                    <cex:ToggleButtonEx
                        Content="Hello World"/>

                </StackPanel>

                <TextBlock
                    Text="TextBoxes:"/>

                <StackPanel
                    Orientation="Horizontal">

                    <cex:TextBoxEx
                        IsEnabled="False"
                        PreviewText="Disabled TextBox ..."/>

                    <cex:TextBoxEx/>

                </StackPanel>

                <TextBlock
                    Text="ScrollBars:"/>

                <StackPanel
                    Orientation="Vertical">

                    <cex:ScrollBarEx
                        IsEnabled="False"
                        Orientation="Horizontal"/>

                    <cex:ScrollBarEx
                        Orientation="Horizontal"/>

                    <StackPanel
                        Orientation="Horizontal">

                        <cex:ScrollBarEx
                            Height="64"
                            IsEnabled="False"/>

                        <cex:ScrollBarEx
                            Height="64"/>

                    </StackPanel>

                </StackPanel>

                <TextBlock
                    Text="ComboBoxes:"/>

                <StackPanel
                    Orientation="Horizontal">

                    <cex:ComboBoxEx
                        IsEnabled="False"
                        Width="128">
                        <cex:ComboBoxItemEx
                            Content="ComboBoxItemEx 1"/>
                    </cex:ComboBoxEx>

                    <cex:ComboBoxEx
                        Width="128">
                        <cex:ComboBoxItemEx
                            Content="ComboBoxItemEx 1"/>
                        <cex:ComboBoxItemEx
                            Content="ComboBoxItemEx 2"
                            IsEnabled="False"/>
                        <cex:ComboBoxItemEx
                            Content="ComboBoxItemEx 3"/>
                    </cex:ComboBoxEx>

                </StackPanel>

                <StackPanel
                    Orientation="Horizontal">

                    <cex:ComboBoxEx
                        IsEditable="True"
                        IsEnabled="False"
                        Width="128">
                        <cex:ComboBoxItemEx
                            Content="ComboBoxItemEx 1"/>
                    </cex:ComboBoxEx>

                    <cex:ComboBoxEx
                        IsEditable="True"
                        Width="128">
                        <cex:ComboBoxItemEx
                            Content="ComboBoxItemEx 1"/>
                        <cex:ComboBoxItemEx
                            Content="ComboBoxItemEx 2"
                            IsEnabled="False"/>
                        <cex:ComboBoxItemEx
                            Content="ComboBoxItemEx 3"/>
                    </cex:ComboBoxEx>

                </StackPanel>

                <TextBlock
                    Text="ListViews:"/>

                <cex:ListViewEx
                    IsEnabled="False"
                    MaxHeight="64">
                    <cex:ListViewEx.Items>
                        <cex:ListViewItemEx
                            Content="ListViewItem 1"/>
                        <cex:ListViewItemEx
                            Content="ListViewItem 2"/>
                        <cex:ListViewItemEx
                            Content="ListViewItem 3"/>
                    </cex:ListViewEx.Items>
                </cex:ListViewEx>

                <cex:ListViewEx
                    MaxHeight="64">
                    <cex:ListViewEx.Items>
                        <cex:ListViewItemEx
                            Content="ListViewItem 1"/>
                        <cex:ListViewItemEx
                            IsEnabled="False"
                            Content="ListViewItem 2"/>
                        <cex:ListViewItemEx
                            Content="ListViewItem 3"/>
                        <cex:ListViewItemEx
                            IsEnabled="False"
                            Content="ListViewItem 4"/>
                        <cex:ListViewItemEx
                            Content="ListViewItem 5"/>
                        <cex:ListViewItemEx
                            Content="ListViewItem 6"/>
                    </cex:ListViewEx.Items>
                </cex:ListViewEx>

                <cex:GridViewEx
                    MaxHeight="64">

                    <cex:GridViewEx.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Country" Width="128">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding Country}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Capital" Width="128">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Text="{Binding Capital}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView.Columns>
                        </GridView>
                    </cex:GridViewEx.View>
                    <cex:GridViewEx.Items>
                        <cex:GridViewItemEx>
                            <cex:ListViewItemEx.Content>
                                <data:CountryInfo Country="USA" Capital="Washington D.C."/>
                            </cex:ListViewItemEx.Content>
                        </cex:GridViewItemEx>
                        <cex:GridViewItemEx>
                            <cex:ListViewItemEx.Content>
                                <data:CountryInfo Country="Germany" Capital="Berlin"/>
                            </cex:ListViewItemEx.Content>
                        </cex:GridViewItemEx>
                        <cex:GridViewItemEx>
                            <cex:ListViewItemEx.Content>
                                <data:CountryInfo Country="France" Capital="Paris"/>
                            </cex:ListViewItemEx.Content>
                        </cex:GridViewItemEx>
                        <cex:GridViewItemEx
                            IsEnabled="False">
                            <cex:ListViewItemEx.Content>
                                <data:CountryInfo Country="Poland" Capital="Warsaw"/>
                            </cex:ListViewItemEx.Content>
                        </cex:GridViewItemEx>
                        <cex:GridViewItemEx>
                            <cex:ListViewItemEx.Content>
                                <data:CountryInfo Country="Czech Republic" Capital="Prague"/>
                            </cex:ListViewItemEx.Content>
                        </cex:GridViewItemEx>
                    </cex:GridViewEx.Items>
                </cex:GridViewEx>

                <!--ListView>
                    <ListView.View>
                        <GridView/>
                    </ListView.View>
                </ListView-->

            </StackPanel>

        </cex:ScrollViewerEx>

    </Grid>
    
</Window>
