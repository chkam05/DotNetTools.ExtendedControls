<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:im="clr-namespace:chkam05.Tools.ControlsEx.InternalMessages"
    xmlns:local="clr-namespace:chkam05.Tools.ControlsEx"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:static="clr-namespace:chkam05.Tools.ControlsEx.Static">

    <SolidColorBrush x:Key="BaseInternalMessageEx.Background">White</SolidColorBrush>
    <SolidColorBrush x:Key="BaseInternalMessageEx.Foreground">Black</SolidColorBrush>

    <Style x:Key="BaseFilesInternalMessageEx.Button" TargetType="{x:Type local:ButtonEx}">
        <Setter Property="Background" Value="{Binding ButtonBackground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="BorderBrush" Value="{Binding ButtonBorderBrush, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="BorderThickness" Value="{Binding ButtonBorderThickness, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="Foreground" Value="{Binding ButtonForeground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="MinWidth" Value="72"/>
        <Setter Property="MouseOverBackground" Value="{Binding ButtonMouseOverBackground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="MouseOverBorderBrush" Value="{Binding ButtonMouseOverBorderBrush, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="MouseOverForeground" Value="{Binding ButtonMouseOverForeground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="PressedBackground" Value="{Binding ButtonPressedBackground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="PressedBorderBrush" Value="{Binding ButtonPressedBorderBrush, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="PressedForeground" Value="{Binding ButtonPressedForeground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
    </Style>

    <Style x:Key="BaseFilesInternalMessageEx.NavigationButton" TargetType="{x:Type local:ButtonEx}">
        <Setter Property="Background" Value="{Binding ButtonBackground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="BorderBrush" Value="{Binding ButtonBorderBrush, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="BorderThickness" Value="{Binding ButtonBorderThickness, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="Foreground" Value="{Binding ButtonForeground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="Height" Value="26"/>
        <Setter Property="Margin" Value="0,0,2,0"/>
        <Setter Property="MouseOverBackground" Value="{Binding ButtonMouseOverBackground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="MouseOverBorderBrush" Value="{Binding ButtonMouseOverBorderBrush, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="MouseOverForeground" Value="{Binding ButtonMouseOverForeground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="PressedBackground" Value="{Binding ButtonPressedBackground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="PressedBorderBrush" Value="{Binding ButtonPressedBorderBrush, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="PressedForeground" Value="{Binding ButtonPressedForeground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="Width" Value="26"/>
    </Style>

    <Style x:Key="BaseFilesInternalMessageEx.TextBox" TargetType="{x:Type local:TextBoxEx}">
        <Setter Property="Background" Value="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="MouseOverBackground" Value="{Binding TextBoxMouseOverBackground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="MouseOverBorderBrush" Value="{Binding TextBoxMouseOverBorderBrush, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="MouseOverForeground" Value="{Binding TextBoxMouseOverForeground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="SelectedBackground" Value="{Binding TextBoxSelectedBackground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="SelectedBorderBrush" Value="{Binding TextBoxSelectedBorderBrush, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="SelectedForeground" Value="{Binding TextBoxSelectedForeground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="SelectedTextBackground" Value="{Binding TextBoxSelectedTextBackground, RelativeSource={RelativeSource AncestorType={x:Type im:BaseFilesInternalMessageEx}}}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <ControlTemplate x:Key="BaseFilesInternalMessageEx.ControlTemplate" TargetType="{x:Type im:BaseFilesInternalMessageEx}">
        <Border
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="{TemplateBinding CornerRadius}"
            MinHeight="384"
            MinWidth="512"
            Padding="{TemplateBinding Padding}">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Grid.Row="0"
                    Padding="0,0,0,8">

                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.ColumnSpan="2"
                            Grid.Row="0"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,8"
                            Orientation="Horizontal">

                            <materialDesign:PackIcon
                                Foreground="{TemplateBinding Foreground}"
                                Kind="{TemplateBinding IconKind}"
                                Height="{TemplateBinding IconHeight}"
                                Margin="{TemplateBinding IconMargin}"
                                MaxHeight="{TemplateBinding IconMaxHeight}"
                                MaxWidth="{TemplateBinding IconMaxWidth}"
                                MinHeight="{TemplateBinding IconMinHeight}"
                                MinWidth="{TemplateBinding IconMinWidth}"
                                Width="{TemplateBinding IconWidth}"/>

                            <TextBlock
                                Foreground="{TemplateBinding Foreground}"
                                FontFamily="{TemplateBinding TitleFontFamily}"
                                FontSize="{TemplateBinding TitleFontSize}"
                                FontStretch="{TemplateBinding TitleFontStretch}"
                                FontStyle="{TemplateBinding TitleFontStyle}"
                                FontWeight="{TemplateBinding TitleFontWeight}"
                                Text="{TemplateBinding Title}"
                                VerticalAlignment="Center"/>

                        </StackPanel>

                        <StackPanel
                            Grid.Column="0"
                            Grid.Row="1"
                            Orientation="Horizontal">

                            <local:ButtonEx
                                x:Name="backButton"
                                IconKind="ChevronLeft"
                                Style="{StaticResource BaseFilesInternalMessageEx.NavigationButton}">
                            </local:ButtonEx>

                            <local:ButtonEx
                                x:Name="forwardButton"
                                IconKind="ChevronRight"
                                Style="{StaticResource BaseFilesInternalMessageEx.NavigationButton}">
                            </local:ButtonEx>

                        </StackPanel>

                        <local:TextBoxEx
                            x:Name="addressTextBox"
                            Grid.Column="1"
                            Grid.Row="1"
                            Text="{Binding TextBoxAddressText}"
                            Style="{StaticResource BaseFilesInternalMessageEx.TextBox}"/>

                    </Grid>

                </Border>

                <ContentPresenter
                    Content="{TemplateBinding Content}"
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    Margin="0,8"
                    VerticalAlignment="Stretch"/>

                <Border
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Grid.Row="2"
                    Padding="0,8,0,0">

                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <local:TextBoxEx
                            x:Name="fileNameTextBox"
                            Grid.Column="0"
                            Grid.Row="0"
                            Style="{StaticResource BaseFilesInternalMessageEx.TextBox}"
                            Text="{Binding TextBoxFileNameText}"/>

                        <StackPanel
                            Grid.ColumnSpan="2"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0"
                            Orientation="Horizontal">

                            <local:ButtonEx
                                x:Name="okButton"
                                Content="Select"
                                Style="{StaticResource BaseFilesInternalMessageEx.Button}">
                            </local:ButtonEx>

                            <local:ButtonEx
                                x:Name="cancelButton"
                                Content="Cancel"
                                Style="{StaticResource BaseFilesInternalMessageEx.Button}">
                            </local:ButtonEx>

                        </StackPanel>
                        
                    </Grid>
                    
                </Border>

            </Grid>

        </Border>
        <ControlTemplate.Triggers>
            
            <!-- CAN GO BACK -->
            <Trigger Property="CanGoBack" Value="False">
                <Setter TargetName="backButton" Property="IsEnabled" Value="False"/>
            </Trigger>
            
            <!-- CAN GO FORWARD -->
            <Trigger Property="CanGoForward" Value="False">
                <Setter TargetName="forwardButton" Property="IsEnabled" Value="False"/>
            </Trigger>
            
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="BaseFilesInternalMessageExStyle" TargetType="{x:Type im:BaseFilesInternalMessageEx}">
        <Setter Property="Background" Value="{StaticResource BaseInternalMessageEx.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource BaseInternalMessageEx.Foreground}"/>
        <Setter Property="Template" Value="{StaticResource BaseFilesInternalMessageEx.ControlTemplate}"/>
        <Setter Property="Title" Value="Message Title"/>
    </Style>

</ResourceDictionary>